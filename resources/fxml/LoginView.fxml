<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="295.0" prefWidth="328.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.simpletimetracker.controllers.LoginViewController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="371.0" prefWidth="557.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="emailField" layoutX="84.0" layoutY="52.0" />
            <PasswordField fx:id="passwordField" layoutX="84.0" layoutY="109.0" />
            <Text layoutX="84.0" layoutY="37.0" text="Enter your email" />
            <Text  layoutX="84.0" layoutY="98.0" text="Enter your password" />
            <Button fx:id="loginButton" layoutX="204.0" layoutY="194.0" mnemonicParsing="false" text="Login" onAction="#onLoginButton"/>
            <Button fx:id="discardButton" layoutX="80.0" layoutY="194.0" mnemonicParsing="false" text="Discard" onAction="#onDiscardButton"/>
            <Hyperlink layoutX="121.0" layoutY="151.0" text="reset password" onAction="#onSetNewPassword"/>
         </children>
    </AnchorPane>
  </children>
</VBox>
